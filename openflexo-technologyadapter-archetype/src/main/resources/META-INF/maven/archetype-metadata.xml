<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
	name="technologyadapter"
	xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<requiredProperties>
		<requiredProperty key="artifactId">
		</requiredProperty>
		<requiredProperty key="flexoCoreVersion">
			<defaultValue>1.7-SNAPSHOT</defaultValue>
		</requiredProperty>
		
		<requiredProperty key="technologyadapterApiVersion">
			<defaultValue>${flexoCoreVersion}</defaultValue>
		</requiredProperty>
		<requiredProperty key="technologyPrefix">
			<defaultValue>${artifactId.toUpperCase()}</defaultValue>
		</requiredProperty>
		<requiredProperty key="technologyExtension">
			<defaultValue>${artifactId.toLowerCase()}</defaultValue>
		</requiredProperty>
		<requiredProperty key="groupId">
			<defaultValue>org.openflexo.technologyadapter</defaultValue>
		</requiredProperty>
		<requiredProperty key="package">
			<defaultValue>org.openflexo.technologyadapter.${artifactId}</defaultValue>
		</requiredProperty>
		<requiredProperty key="author">
			<defaultValue>SomeOne</defaultValue>
		</requiredProperty>
		

	</requiredProperties>
	<modules>
		<module id="${rootArtifactId}connector" dir="__rootArtifactId__connector"
			name="${rootArtifactId}connector">
			<fileSets>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/main/java</directory>
					<includes>
						<include>**/*.java</include>
					</includes>
				</fileSet>
				<fileSet filtered="true" encoding="UTF-8">
					<directory>src/main/resources</directory>
					<includes>
						<include>**/*.TechnologyAdapter</include>
					</includes>
				</fileSet>
			</fileSets>
		</module>
		<module id="${rootArtifactId}connector-ui" dir="__rootArtifactId__connector-ui"
			name="${rootArtifactId}connector-ui">
			<fileSets>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/main/java</directory>
					<includes>
						<include>**/*.java</include>
					</includes>
				</fileSet>
				<fileSet filtered="true" encoding="UTF-8">
					<directory>src/main/resources</directory>
					<includes>
						<include>**/*.TechnologyAdapterController</include>
						<include>**/*.fib</include>
					</includes>
				</fileSet>
				<fileSet filtered="false" encoding="UTF-8">
					<directory>src/main/resources</directory>
					<includes>
						<include>**/*.gif</include>
					</includes>
				</fileSet>
			</fileSets>
		</module>
	</modules>
</archetype-descriptor>
